        <!-- Cloudera Manager CBoard parcel and CSD jar -->
        <profile>
            <id>cm</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.eclipse.jetty.aggregate</groupId>
                    <artifactId>jetty-all</artifactId>
                    <version>8.1.8.v20121106</version>
                </dependency>
            </dependencies>
            <build>
                <!-- 拷贝resources -->
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                        <targetPath>${project.build.directory}/resources</targetPath>
                        <excludes>
                            <exclude>*.properties</exclude>
                        </excludes>
                    </resource>
                    <resource>
                        <directory>sql</directory>
                        <targetPath>${project.build.directory}/resources/sql</targetPath>
                    </resource>
                    <resource>
                        <directory>src/main/resources</directory>
                        <targetPath>${project.build.directory}/conf</targetPath>
                        <includes>
                            <include>*.properties</include>
                        </includes>
                    </resource>
                    <resource>
                        <directory>src/cm/resources</directory>
                        <targetPath>${project.build.directory}/resources</targetPath>
                        <excludes>
                            <exclude>*.properties</exclude>
                        </excludes>
                    </resource>
                    <resource>
                        <directory>src/cm/resources</directory>
                        <targetPath>${project.build.directory}/conf</targetPath>
                        <includes>
                            <include>*.properties</include>
                        </includes>
                    </resource>
                </resources>
                <plugins>
                    <!-- 添加sources目录 -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                        <version>1.6</version>
                        <executions>
                            <execution>
                                <id>add-source</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>add-source</goal>
                                </goals>
                                <configuration>
                                    <sources><!-- 可以在这里添加多个source节点，来添加任意多个源文件夹 -->
                                        <source>src/main/java</source>
                                        <source>src/cm/java</source>
                                    </sources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- 编译java -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>3.3</version>
                        <configuration>
                            <source>${jdk.version}</source>
                            <target>${jdk.version}</target>
                            <encoding>UTF-8</encoding>
                            <showDeprecation>true</showDeprecation>
                            <showWarnings>true</showWarnings>
                        </configuration>
                    </plugin>
                    <!--执行自定义命令-->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2.1</version>
                        <executions>
                            <!-- 校验service.sdl文件 -->
                            <execution>
                                <id>validate-service-sdl</id>
                                <phase>validate</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>java</executable>
                                    <arguments>
                                        <argument>-jar</argument>
                                        <argument>${schema.validator.jar}</argument>
                                        <argument>-s</argument>
                                        <argument>${project.basedir}/cm/csd/descriptor/service.sdl</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <!-- 校验el6的parcel.json文件 -->
                            <execution>
                                <id>validate-el6-parcel-json</id>
                                <phase>validate</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>java</executable>
                                    <arguments>
                                        <argument>-jar</argument>
                                        <argument>${schema.validator.jar}</argument>
                                        <argument>-p</argument>
                                        <argument>${project.basedir}/cm/parcels/el6/meta/parcel.json</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <!-- 校验el7的parcel.json文件 -->
                            <execution>
                                <id>validate-el7-parcel-json</id>
                                <phase>validate</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>java</executable>
                                    <arguments>
                                        <argument>-jar</argument>
                                        <argument>${schema.validator.jar}</argument>
                                        <argument>-p</argument>
                                        <argument>${project.basedir}/cm/parcels/el7/meta/parcel.json</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <!-- 校验el6的alternatives.json文件 -->
                            <execution>
                                <id>validate-el6-alternatives-json</id>
                                <phase>validate</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>java</executable>
                                    <arguments>
                                        <argument>-jar</argument>
                                        <argument>${schema.validator.jar}</argument>
                                        <argument>-a</argument>
                                        <argument>${project.basedir}/cm/parcels/el6/meta/alternatives.json</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <!-- 校验el7的alternatives.json文件 -->
                            <execution>
                                <id>validate-el7-alternatives-json</id>
                                <phase>validate</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>java</executable>
                                    <arguments>
                                        <argument>-jar</argument>
                                        <argument>${schema.validator.jar}</argument>
                                        <argument>-a</argument>
                                        <argument>${project.basedir}/cm/parcels/el7/meta/alternatives.json</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <!-- 校验el6的parcel包 -->
                            <execution>
                                <id>validate-el6-parcel</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>java</executable>
                                    <arguments>
                                        <argument>-jar</argument>
                                        <argument>${schema.validator.jar}</argument>
                                        <argument>-f</argument>
                                        <argument>
                                            ${project.build.directory}/CM/parcels/${parcel.name}-el6.parcel
                                        </argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <!-- 校验el7的parcel包 -->
                            <execution>
                                <id>validate-el7-parcel</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>java</executable>
                                    <arguments>
                                        <argument>-jar</argument>
                                        <argument>${schema.validator.jar}</argument>
                                        <argument>-f</argument>
                                        <argument>
                                            ${project.build.directory}/CM/parcels/${parcel.name}-el7.parcel
                                        </argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <!-- 生成manifest.json文件 -->
                            <execution>
                                <id>python-manifest-json</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>python</executable>
                                    <arguments>
                                        <argument>${make.manifest.py}</argument>
                                        <argument>${project.build.directory}/CM/parcels/</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- 打jar包 -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <version>2.6</version>
                        <executions>
                            <!-- class打成jar包 -->
                            <execution>
                                <id>class-jar</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <jarName>${project.artifactId}-${project.version}</jarName>
                                    <classesDirectory>${project.build.outputDirectory}</classesDirectory>
                                    <outputDirectory>${project.build.directory}/lib</outputDirectory>
                                </configuration>
                            </execution>
                            <!-- csd打成jar包 -->
                            <execution>
                                <id>csd-jar</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <jarName>${parcel.name}</jarName>
                                    <classesDirectory>${project.basedir}/cm/csd</classesDirectory>
                                    <outputDirectory>${project.build.directory}/CM/csd</outputDirectory>
                                </configuration>
                            </execution>
                        </executions>

                    </plugin>
                    <!-- 拷贝依赖的jar包到lib目录 -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-dependencies</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                                <configuration>
                                    <type>jar</type>
                                    <includeTypes>jar</includeTypes>
                                    <outputDirectory>${project.build.directory}/lib</outputDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- 装配并打包 -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <inherited>false</inherited>
                        <executions>
                            <!-- CBoard el6 parcel目录打包为.tar.gz -->
                            <execution>
                                <id>parcel-el6-packaging</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
